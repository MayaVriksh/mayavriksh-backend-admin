{
    "name": "mayavriksh-backend-admin",
    "version": "1.0.0",
    "description": "Backend service for the Super Admin panel of Mayavriksh",
    "author": "lesorc",
    "license": "ISC",
    "type": "commonjs",
    "main": "src/server.js",
    "scripts": {
        "dev": "nodemon src/server.js",
        "start": "node src/server.js",
        "lint": "eslint . --ext .js,.ts",
        "format": "prettier --write .",
        "prisma": "prisma",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio",
        "seed:all": "node src/seeder/scripts/index.seeder.js",
        "seed:serial_trackers": "node src/seeder/scripts/serialtracker.seeder.js",
        "seed:roles": "node src/seeder/scripts/roles.seeder.js",
        "seed:warehouses": "node src/seeder/scripts/warehouses.seeder.js",
        "seed:users": "node src/seeder/scripts/users.seeder.js",
        "seed:tags": "node src/seeder/scripts/tags.seeder.js",
        "seed:colors": "node src/seeder/scripts/colors.seeder.js",
        "seed:pot_materials": "node src/seeder/scripts/potMaterials.seeder.js",
        "seed:plants": "node src/seeder/scripts/plants.seeder.js",
        "seed:pots": "node src/seeder/scripts/pots.seeder.js",
        "seed:purchase_order": "node src/seeder/scripts/purchaseOrder.seeder.js",
        "postinstall": "prisma generate"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "dependencies": {
        "@hapi/hapi": "^21.4.0",
        "@hapi/inert": "^7.1.0",
        "@hapi/vision": "^7.0.3",
        "@prisma/client": "^6.12.0",
        "bcrypt": "^6.0.0",
        "cloudinary": "^2.7.0",
        "dotenv": "^17.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "hapi-swagger": "^17.3.2",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.1",
        "mysql2": "^3.14.1",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "nodemon": "^3.1.4",
        "prettier": "^3.6.2",
        "prisma": "^6.12.0"
    }
}
